{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",

    "moduleResolution": "node",
    "allowJs": true,

    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "custom.d.ts"]
}
